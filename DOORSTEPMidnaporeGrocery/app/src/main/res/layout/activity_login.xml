<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context=".Activity.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/login_page_app_icon"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/app_icon"
                android:paddingTop="15dp"
                android:layout_marginTop="15dp"/>

            <EditText
                android:id="@+id/login_user_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_fields"
                android:layout_below="@+id/login_page_app_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textCursorDrawable="@drawable/colour_cursor"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="@string/email"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal"
                android:textSize="20sp"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/login_user_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_fields"
                android:layout_below="@+id/login_user_email"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:textCursorDrawable="@drawable/colour_cursor"
                android:padding="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:hint="@string/enter_password"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal"
                android:textSize="20sp"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_user_password"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                android:layout_alignParentEnd="true"
                android:text="@string/forgot_password"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/login_user_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/forgot_password"
                android:background="@drawable/buttons"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:text="@string/login"
                android:textColor="@color/colorAccent"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/don_t_have_an_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_user_button"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="15dp"
                android:layout_centerHorizontal="true"
                android:text="@string/don_t_have_an_account"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="normal"
                android:textSize="14sp"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>